<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TopRatedMoviesFragment">

    <com.nishant.mymovies.customviews.EmptyRecyclerView
        android:id="@+id/fragment_top_rated_movies_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="@dimen/full_padding"
        android:paddingEnd="@dimen/full_padding"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"/>
    <!--android:layoutAnimation="@anim/grid_layout_animation_from_bottom"-->

    <include
        android:id="@+id/empty_view"
        layout="@layout/layout_empty_view"
        android:visibility="gone" />

</FrameLayout>